{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "client/dist",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ],
  "functions": {
    "api/*.ts": {
      "runtime": "@vercel/node"
    }
  },
  "env": {
    "GITHUB_REPO": "@github_repo",
    "GITHUB_TOKEN": "@github_token"
  }
}